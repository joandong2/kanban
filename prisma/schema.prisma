generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Board {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  boardCode String @unique
  name String

  columns BoardColumn[]
}

model BoardColumn {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  columnCode String @unique
  name String

  boardCode String
  board Board @relation(fields: [boardCode], references:[boardCode])

  tasks Task[]
}

model Task {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  taskCode String @unique
  title String
  description String
  createdAt DateTime @default(now())
  udpatedAt DateTime @updatedAt

  columnCode String
  boardcolumn BoardColumn @relation(fields: [columnCode], references:[columnCode])

  subTasks SubTask[]
}

model SubTask {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  subTaskCode String @unique
  title String

  taskCode String
  task Task @relation(fields: [taskCode], references:[taskCode])

  @@unique([taskCode, title], name: "taskCode_Title")
}
