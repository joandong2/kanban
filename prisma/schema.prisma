generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Board {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  boardCode String @unique
  name String
  createdAt DateTime @default(now())
  udpatedAt DateTime @updatedAt
  columns Column[]
  task Task[]
}

model Column {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  columnCode String @unique
  column String
  name String
  boardCode String
  board Board @relation(fields: [boardCode], references:[boardCode])
}

model Task {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  taskCode String @unique
  title String
  description String
  order Int
  boardCode String
  column String
  board Board @relation(fields: [boardCode], references:[boardCode])
  subTasks SubTask[]
}

model SubTask {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  taskCode String
  task Task @relation(fields: [taskCode], references:[taskCode])
  @@unique([taskCode, title], name: "taskCode_Title")
}
